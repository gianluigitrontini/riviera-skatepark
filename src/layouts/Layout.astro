---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <slot />
    <!-- <Footer /> -->
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
    --alias-main: "SequelSansHeadline", sans-serif;
    --alias-alt: "SharpGroteskBook20", sans-serif;
  }

  html {
    font-family: system-ui, sans-serif;
    height: 100%;
  }

  @font-face {
    font-family: "SequelSansHeadline";
    src: url("/fonts/SequelSansHeadlineRegular.woff2") format("woff2");
    font-weight: 400;
  }
  @font-face {
    font-family: "SequelSansHeadline";
    src: url("/fonts/SequelSansHeadlineRegularItalic.woff2") format("woff2");
    font-weight: 400;
    font-style: italic;
  }
  @font-face {
    font-family: "SequelSansHeadline";
    src: url("/fonts/SequelSansHeadlineMedium.woff2") format("woff2");
    font-weight: 500;
  }
  @font-face {
    font-family: "SequelSansHeadline";
    src: url("/fonts/SequelSansHeadlineSemi.woff2") format("woff2");
    font-weight: 700;
  }

  @font-face {
    font-family: "SharpGroteskBook20";
    src: url("/fonts/SharpGroteskBook20.woff2") format("woff2");
    font-weight: 400;
  }
  @font-face {
    font-family: "SharpGroteskBook20";
    src: url("/fonts/SharpGroteskBook20.woff2") format("woff2");
    font-weight: 500;
  }

  body {
    font-family: var(--alias-main);
    -webkit-font-smoothing: antialiased;
    -webkit-text-size-adjust: 100%;
    text-rendering: optimizelegibility;
  }

  main {
    margin: auto;
    font-size: 20px;
    line-height: 1.6;
  }

  .container {
    /* padding: 1rem; */
    /* max-width: calc(100% - 2rem); */
  }

  .animate-text {
    @apply bg-gradient-to-r bg-clip-text text-transparent;
  }
</style>
