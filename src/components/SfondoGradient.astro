---
const { type } = Astro.props;
---

{
  type == "1" && (
    <div
      class="absolute inset-10 -z-10 blur-3xl opacity-30 rotate-180"
      aria-hidden="true"
    >
      <div
        class="w-full h-full bg-gradient-to-tr from-[#f4a516] to-[#f37b43] "
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      />
    </div>
  )
}

{
  type == "2" && (
    <div class="absolute inset-10 -z-10 blur-3xl opacity-0" aria-hidden="true">
      <div
        class="w-full h-full bg-gradient-to-tr from-[#f4a516] to-[#f37b43] "
        style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
      />
    </div>
  )
}

{
  type == "all" && (
    <>
      <div
        class="absolute inset-10 -z-10 blur-3xl opacity-20"
        aria-hidden="true"
      >
        <div
          class="w-full h-full bg-gradient-to-tr from-[#f4a516] to-[#f37b43] "
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        />
      </div>

      <div class="absolute inset-0 -z-10 blur-3xl opacity-0" aria-hidden="true">
        <div
          class="w-full h-full bg-gradient-to-tr from-[#f4a516] to-[#f37b43] "
          style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"
        />
      </div>
    </>
  )
}
