---
import { Image } from "astro:assets";
import MascheraPerFoto from "./MascheraPerFoto.astro";
import SfondoGradient from "./SfondoGradient.astro";
---

<section class="flex flex-col justify-center">
  <div
    style="background: url('/public/images/home/bg-riviera.jpeg');"
    class="min-h-[50vh] !bg-cover !bg-center"
  >
  </div>
  <!-- <img src="/public/images/home/bg-riviera.jpeg" alt="" class="min-h-36 h-full"> -->
  <div class="mx-auto p-4 -mt-8">
    <p class="bg-white p-4 text-2xl text-center">
      Il cuore pulsante della comunità skateboard di San Benedetto del Tronto
    </p>
  </div>
  <div
    class="mt-10 flex flex-col md:flex-row items-center justify-center gap-8 p-4"
  >
    <div class="flex items-start gap-2">
      <svg
        class="w-6 h-6 text-indigo-600 mt-1.5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 22s-8-4.5-8-11a8 8 0 0116 0c0 6.5-8 11-8 11z"></path>
        <circle cx="12" cy="10" r="3"></circle>
      </svg>
      <div>
        Viale dello Sport, 60
        <br />
        San Benedetto del Tronto
      </div>
    </div>
    <div class="flex items-start gap-2">
      <svg
        class="w-6 h-6 text-indigo-600 mt-1.5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 20.25c4.97 0 9-3.694 9-8.25s-4.03-8.25-9-8.25S3 7.444 3 12c0 2.104.859 4.023 2.273 5.48.432.447.74 1.04.586 1.641a4.483 4.483 0 0 1-.923 1.785A5.969 5.969 0 0 0 6 21c1.282 0 2.47-.402 3.445-1.087.81.22 1.668.337 2.555.337Z"
        ></path>
      </svg>

      <div>
        320 759 9217
        <br />
        asdsbtsk8@gmail.com
      </div>
    </div>
  </div>
  <div
    class="mt-10 flex flex-col md:flex-row items-center justify-center gap-4 p-4"
  >
    <a
      href="#orari"
      class="w-full max-w-[300px] text-sm font-semibold leading-6 text-indigo-600 p-4 rounded-full bg-indigo-100 hover:bg-indigo-200"
    >
      Orari <span aria-hidden="true">→</span>
    </a>
    <a
      href="#tesseramenti"
      class="w-full max-w-[300px] text-sm font-semibold leading-6 text-indigo-600 p-4 rounded-full bg-indigo-100 hover:bg-indigo-200"
    >
      Tesseramenti <span aria-hidden="true">→</span>
    </a>
    <a
      href="#corsi-di-skate"
      class="w-full max-w-[300px] text-sm font-semibold leading-6 text-indigo-600 p-4 rounded-full bg-indigo-100 hover:bg-indigo-200"
    >
      Corsi di skate <span aria-hidden="true">→</span>
    </a>
  </div>

  <div class="relative px-6 pt-14 lg:px-8">
    <SfondoGradient type="all" />
  </div>
</section>
